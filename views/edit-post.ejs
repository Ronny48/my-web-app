<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head', { title: 'Edit post â€” Our wonderful app' }) %>
  <body>
    <%- include('includes/header') %>
    <main>
      <div class="container page">
        <section class="card form-card">
          <h2>Edit post</h2>
          <form
            action="/edit-post/<%= post.id %>"
            method="POST"
            class="signup-form"
          >
            <% if (errors && errors.length) { %>
            <div class="errors">
              <% errors.forEach(error => { %>
              <p class="notice"><%= error %></p>
              <% }) %>
            </div>
            <% } %>

            <label for="title">Title</label>
            <input
              type="text"
              value="<%= post.title %>"
              name="title"
              id="title"
              autocomplete="off"
              required
            />

            <label for="body">Content</label>
            <textarea name="body" id="body" rows="8" required>
<%= post.body %></textarea
            >

            <div class="form-actions">
              <button class="button primary">Save Changes</button>
              <a href="/post/<%= post.id %>" class="button secondary">Back</a>
            </div>
          </form>
        </section>
      </div>
    </main>
    <%- include('includes/footer') %>
  </body>
</html>
